<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScratchWin.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
       
        <Label Text="You have won ......" FontSize="Medium" TextColor="BlueViolet" />
        <Label Text="{Binding Name}" FontSize="Medium" TextColor="BlueViolet" />
        <Image Source="{Binding Description}" WidthRequest="80" VerticalOptions="FillAndExpand" HeightRequest="84" />

    </StackLayout>

   

</ContentPage>